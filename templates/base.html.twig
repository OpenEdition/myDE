{% extends '@MyDigitalEnvironment/skeleton.html.twig' %}
{% trans_default_domain 'my-de' %}

{% block body %}
    <nav class="navbar navbar-expand-md bg-body-tertiary">
        <div class="container-fluid justify-content-start">
            {% include '@MyDigitalEnvironment/_nav_brand.html.twig' %}
            {% block brandExpansion %}{% endblock %}
            <span class="navbar-text flex-fill">{% block navTitle %}Page Title{% endblock %}</span>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse flex-grow-0" id="navbarNav">
                <ul class="navbar-nav">
                    {# <li class="nav-item"> #}
                    {#    <a class="nav-link active" aria-current="page" href="#">Home</a> #}
                    {# </li> #}
                    {% block leftNavItems %}{% endblock %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">
                            {% if app.locale == 'fr' %}
                                <span class="fi fi-fr"></span>
                            {% else %}
                                <span class="fi fi-gb"></span>
                            {% endif %}
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                {% set par = app.current_route_parameters | merge({lang: 'en'}) %}
                                <a class="dropdown-item" href="{{ path(app.current_route, par)}}"><span class="fi fi-gb"></span> English</a>
                            </li>
                            <li>
                                {% set par = app.current_route_parameters | merge({lang: 'fr'}) %}
                                <a class="dropdown-item" href="{{ path(app.current_route, par)}}"><span class="fi fi-fr"></span> Fran√ßais</a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-medium"
                           href="{{ path('my_digital_environment_user_info') }}">{{ app.user.userIdentifier }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('my_digital_environment_user_logout') }}">{{ 'nav.logout'|trans }}</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    {% block contentWrapper %}
        <div class="px-3 pt-2">
            {% block content %}{% endblock %}
        </div>
    {% endblock contentWrapper %}
{% endblock %}

